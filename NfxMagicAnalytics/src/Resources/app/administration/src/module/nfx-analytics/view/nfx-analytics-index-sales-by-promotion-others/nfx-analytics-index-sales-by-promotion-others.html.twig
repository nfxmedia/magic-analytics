{% block nfx_analytics_sales_by_promotion_others %}
    <div>

        {% block nfx_analytics_sales_by_promotion_others_chart %}
            <sw-card positionIdentifier="'test'" class="nfx-analytics-content-card-chart nfx-analytics-sales-by-promotion-others-chart"
                     :isLoading="isLoading" v-if="!displayOptions.dashboard || activeStatistic.parameter.dashboard.showChart == 1">

                {% block nfx_analytics_sales_by_promotion_others_chart_data %}
                    <sw-chart
                            v-if="isLoading == false && chartType != null"
                            :type="chartType"
                            :series="chartSeriesData"
                            :options="chartOptions"
                            sort>
                    </sw-chart>
                {% endblock %}

                {% block nfx_analytics_sales_by_promotion_others_select_box %}
                    <sw-select-field class="nfx-analytics-charttype-select"
                                     :label="$tc('nfx-analytics.view.chartSelection.selectLabel')"
                                     :placeholder="$tc('nfx-analytics.view.chartSelection.placeholder')"
                                     :value="chartType"
                                     @update:value="onChangeField($event, 'chartType')">
                        <option value="bar">{{  $tc('nfx-analytics.view.chartSelection.bar') }}</option>
                        <option value="pie">{{ $tc('nfx-analytics.view.chartSelection.pie') }}</option>
                        <option value="donut">{{ $tc('nfx-analytics.view.chartSelection.donut') }}</option>
                    </sw-select-field>
                {% endblock %}

            </sw-card>
        {% endblock %}

        {% block nfx_analytics_sales_by_promotion_others_grid %}
            <sw-card positionIdentifier="'test'" class="nfx-analytics-content-card-grid nfx-analytics-sales-by-promotion-others-grid"
                     :isLoading="isLoading" v-if="!displayOptions.dashboard || activeStatistic.parameter.dashboard.showTable == 1">

                {% block nfx_analytics_sales_by_promotion_others_grid_data %}
                    <div v-if="displayOptions.dashboard" class="nfx-analytics-grid-label">
                        {{ $tc(activeStatistic.label) }}
                    </div>

                    <div v-if="!gridSeriesData || (gridSeriesData && gridSeriesData.length == 0)" class="nfx-analytics-empty-state-wrapper">
                        <sw-empty-state :title="$tc('nfx-analytics.index.noData')"></sw-empty-state>
                    </div>

                    <sw-data-grid v-else
                            :dataSource="gridSeriesData"
                            :columns="getGridColumns"
                            :showSelection="false"
                            :sort-by="sortBy"
                            :sort-direction="sortDirection"
                            @column-sort="onColumnSort"
                            :showActions="false">

                        {% block nfx_analytics_sales_by_promotion_others_grid_columns_name %}
                            <template #column-name="{ item }">
                                <router-link
                                        class="sw-data-grid__cell-value"
                                        :to="{ name: 'sw.promotion.v2.detail', params: { id: item.id } }">
                                    {{ item.name }}
                                </router-link>
                            </template>
                        {% endblock %}

                        <template #column-discount="{ item }">
                            {{ currencyFilter(item.discount, systemCurrency.isoCode) }}
                        </template>

                        <template #column-avg="{ item }">
                            {{ currencyFilter(item.avg, systemCurrency.isoCode) }}
                        </template>

                        <template #column-sum="{ item }">
                            {{ currencyFilter(item.sum, systemCurrency.isoCode) }}
                        </template>

                        <template #pagination>
                            {% block analytics_sales_by_promotion_others_grid_pagination %}
                                <sw-pagination :page="page"
                                               :limit="limit"
                                               :total="total"
                                               :total-visible="7"
                                               @page-change="onPageChange">
                                </sw-pagination>
                            {% endblock %}
                        </template>

                    </sw-data-grid>
                {% endblock %}

            </sw-card>
        {% endblock %}

    </div>
{% endblock %}
