{% block nfx_analytics_index %}
<div class="nfx-ultimate-dashboard" :class="'theme-' + currentTheme">
    <!-- Advanced Background Animations -->
    <nfx-particles-bg 
        :theme="currentTheme" 
        :interactive="true" 
        performance-mode="balanced"
        class="dashboard-background">
    </nfx-particles-bg>
    
    <!-- Gradient Mesh Background -->
    <div class="gradient-mesh-layer">
        <div class="floating-orb orb-1"></div>
        <div class="floating-orb orb-2"></div>
        <div class="floating-orb orb-3"></div>
        <div class="floating-orb orb-4"></div>
        <div class="floating-orb orb-5"></div>
    </div>
    
    <!-- Glass Morphism Navigation -->
    <nfx-glass-navigation 
        :items="navigationItems"
        :active-item="activeStatisticName"
        @navigate="changeStatistic"
        class="dashboard-navigation">
    </nfx-glass-navigation>
    
    <!-- Advanced Theme Switcher -->
    <nfx-theme-switcher-advanced 
        :current-theme="currentTheme"
        @theme-changed="applyTheme"
        class="theme-switcher-floating">
    </nfx-theme-switcher-advanced>
    
    <!-- Analog Clock Widget (Easter Egg) -->
    <nfx-analog-clock class="floating-clock"></nfx-analog-clock>
    
    <!-- Main Dashboard Content -->
    <div class="dashboard-content">
        <!-- Hero Header Section -->
        <section class="hero-section liquid-glass">
            <div class="hero-content">
                <h1 class="hero-title">
                    <span class="icon animated-icon">âœ¨</span>
                    Magic Analytics
                    <span class="subtitle">Ultimate Dashboard</span>
                </h1>
                <div class="hero-metrics">
                    <nfx-animated-counter 
                        :value="127456" 
                        :duration="2000"
                        prefix="â‚¬"
                        :show-particles="true"
                        class="hero-counter">
                    </nfx-animated-counter>
                    <nfx-progress-ring 
                        :percentage="75" 
                        :size="80"
                        color="var(--nfx-primary)"
                        :show-waves="true"
                        class="hero-progress">
                    </nfx-progress-ring>
                </div>
            </div>
            <div class="hero-actions">
                <button class="liquid-button liquid-button--primary" @click="onRefresh">
                    <sw-icon name="regular-sync" size="16"></sw-icon>
                    Refresh Data
                </button>
                <button class="liquid-button liquid-button--secondary" @click="exportCSV">
                    <sw-icon name="regular-download" size="16"></sw-icon>
                    Export Analytics
                </button>
            </div>
        </section>
        
        <!-- Stock Prediction Module -->
        <section class="prediction-section">
            <nfx-stock-prediction class="prediction-module"></nfx-stock-prediction>
        </section>
        
        <!-- KPI Cards with Masonry Layout -->
        <section class="kpi-section">
            <h2 class="section-title glass-text">
                <span class="icon">ðŸ“Š</span>
                Live Performance Metrics
            </h2>
            
            <nfx-masonry-grid 
                :items="kpiItems"
                :column-width="320"
                :gutter="24"
                :enable-drag-drop="true"
                @reorder="handleKPIReorder"
                class="kpi-masonry">
                
                <template #item="{ item, index }">
                    <nfx-kpi-flipcard
                        :value="item.value"
                        :previous-value="item.previousValue"
                        :title="item.title"
                        :icon="item.icon"
                        :unit="item.unit"
                        :liquid-percentage="item.percentage"
                        :theme="item.theme"
                        :details="item.details"
                        :auto-flip="true"
                        :flip-duration="8000"
                        :class="'kpi-card-' + index">
                    </nfx-kpi-flipcard>
                </template>
            </nfx-masonry-grid>
        </section>
        
        <!-- Advanced Charts Section -->
        <section class="charts-section">
            <div class="charts-grid">
                <!-- Main Revenue Chart -->
                <div class="chart-container chart-primary">
                    <nfx-apex-chart
                        type="area"
                        :data="revenueData"
                        :options="chartOptions"
                        :real-time="true"
                        title="Revenue Analytics"
                        class="revenue-chart">
                    </nfx-apex-chart>
                </div>
                
                <!-- Customer Heatmap -->
                <div class="chart-container chart-secondary">
                    <nfx-apex-chart
                        type="heatmap"
                        :data="heatmapData"
                        :options="heatmapOptions"
                        title="Customer Activity"
                        class="activity-heatmap">
                    </nfx-apex-chart>
                </div>
                
                <!-- Conversion Funnel -->
                <div class="chart-container chart-tertiary">
                    <nfx-apex-chart
                        type="radialBar"
                        :data="conversionData"
                        :options="radialOptions"
                        title="Conversion Funnel"
                        class="conversion-funnel">
                    </nfx-apex-chart>
                </div>
            </div>
        </section>
        
        <!-- Interactive Metrics Grid -->
        <section class="metrics-grid">
            <div class="metric-card liquid-glass" v-for="(metric, index) in advancedMetrics" :key="index">
                <div class="metric-header">
                    <h3 class="metric-title">{{ metric.title }}</h3>
                    <div class="metric-trend" :class="'trend-' + metric.trend">
                        <sw-icon :name="metric.trendIcon" size="16"></sw-icon>
                        {{ metric.trendValue }}
                    </div>
                </div>
                <div class="metric-content">
                    <nfx-animated-counter 
                        :value="metric.value"
                        :duration="1500"
                        :prefix="metric.prefix"
                        :suffix="metric.suffix"
                        :decimals="metric.decimals"
                        easing="cubic-bezier(0.4, 0, 0.2, 1)">
                    </nfx-animated-counter>
                    <nfx-progress-ring 
                        :percentage="metric.progress"
                        :size="60"
                        :stroke-width="4"
                        :color="metric.color"
                        class="metric-progress">
                    </nfx-progress-ring>
                </div>
                <div class="metric-sparkline">
                    <svg viewBox="0 0 100 30" class="sparkline-svg">
                        <path 
                            :d="metric.sparklineData" 
                            stroke="currentColor" 
                            fill="none" 
                            stroke-width="2"
                            class="sparkline-path">
                        </path>
                    </svg>
                </div>
            </div>
        </section>
        
        <!-- Real-time Activity Feed -->
        <section class="activity-section">
            <div class="activity-header">
                <h2 class="section-title glass-text">
                    <span class="icon pulse-icon">ðŸ”¥</span>
                    Live Activity Stream
                </h2>
                <div class="activity-controls">
                    <button class="liquid-button liquid-button--sm" @click="pauseActivity">
                        <sw-icon name="regular-pause" size="14"></sw-icon>
                        Pause
                    </button>
                    <button class="liquid-button liquid-button--sm" @click="clearActivity">
                        <sw-icon name="regular-trash" size="14"></sw-icon>
                        Clear
                    </button>
                </div>
            </div>
            
            <div class="activity-stream">
                <div 
                    v-for="(activity, index) in activityFeed" 
                    :key="activity.id"
                    class="activity-item animated-item"
                    :class="'activity-' + activity.type"
                    :style="{ animationDelay: (index * 100) + 'ms' }">
                    
                    <div class="activity-avatar">
                        <img :src="activity.avatar" :alt="activity.user">
                    </div>
                    <div class="activity-content">
                        <div class="activity-message">{{ activity.message }}</div>
                        <div class="activity-meta">
                            <span class="activity-time">{{ formatTime(activity.timestamp) }}</span>
                            <span class="activity-location">{{ activity.location }}</span>
                        </div>
                    </div>
                    <div class="activity-value" :class="'value-' + activity.type">
                        {{ activity.value }}
                    </div>
                </div>
            </div>
        </section>
        
        <!-- Footer Stats -->
        <footer class="dashboard-footer">
            <div class="footer-stats">
                <div class="stat-item">
                    <span class="stat-label">Data Points</span>
                    <nfx-animated-counter 
                        :value="totalDataPoints" 
                        :duration="1000"
                        class="stat-value">
                    </nfx-animated-counter>
                </div>
                <div class="stat-item">
                    <span class="stat-label">Last Updated</span>
                    <span class="stat-value">{{ lastUpdated }}</span>
                </div>
                <div class="stat-item">
                    <span class="stat-label">Performance</span>
                    <nfx-progress-ring 
                        :percentage="performanceScore"
                        :size="40"
                        :show-percentage="true"
                        color="var(--nfx-success)"
                        class="stat-progress">
                    </nfx-progress-ring>
                </div>
            </div>
        </footer>
    </div>
</div>

<style>
/* Ultimate Dashboard Styles */
.nfx-ultimate-dashboard {
    position: relative;
    min-height: 100vh;
    background: var(--nfx-bg-primary);
    overflow-x: hidden;
}

.dashboard-background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
}

.gradient-mesh-layer {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    pointer-events: none;
    z-index: 2;
}

.floating-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.3;
    animation: float 25s ease-in-out infinite;
}

.orb-1 {
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, var(--nfx-primary), transparent);
    top: -200px;
    left: -200px;
    animation-delay: 0s;
}

.orb-2 {
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, var(--nfx-secondary), transparent);
    top: 20%;
    right: -150px;
    animation-delay: -8s;
}

.orb-3 {
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, var(--nfx-accent), transparent);
    bottom: -250px;
    left: 20%;
    animation-delay: -16s;
}

.orb-4 {
    width: 350px;
    height: 350px;
    background: radial-gradient(circle, var(--nfx-success), transparent);
    top: 60%;
    right: 30%;
    animation-delay: -5s;
}

.orb-5 {
    width: 250px;
    height: 250px;
    background: radial-gradient(circle, var(--nfx-warning), transparent);
    bottom: 30%;
    right: -125px;
    animation-delay: -12s;
}

.dashboard-navigation {
    position: fixed;
    left: 2rem;
    top: 2rem;
    bottom: 2rem;
    width: 300px;
    z-index: 100;
}

.theme-switcher-floating {
    position: fixed;
    top: 2rem;
    right: 2rem;
    z-index: 100;
}

.floating-clock {
    position: fixed;
    top: 50%;
    right: 2rem;
    transform: translateY(-50%);
    z-index: 50;
}

.dashboard-content {
    margin-left: 340px;
    margin-right: 2rem;
    padding: 2rem 0;
    position: relative;
    z-index: 10;
}

.hero-section {
    padding: 3rem;
    border-radius: 32px;
    margin-bottom: 3rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    backdrop-filter: blur(20px);
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.hero-title {
    font-size: 3rem;
    font-weight: 800;
    margin: 0;
    background: linear-gradient(135deg, var(--nfx-primary), var(--nfx-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    display: flex;
    align-items: center;
    gap: 1rem;
}

.hero-title .subtitle {
    font-size: 1.25rem;
    font-weight: 400;
    opacity: 0.7;
    display: block;
}

.hero-metrics {
    display: flex;
    align-items: center;
    gap: 2rem;
}

.hero-actions {
    display: flex;
    gap: 1rem;
}

.section-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 2rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
}

.glass-text {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    padding: 1rem 1.5rem;
    border-radius: 16px;
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.charts-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    grid-template-rows: auto auto;
    gap: 2rem;
    margin-bottom: 3rem;
}

.chart-primary {
    grid-column: 1;
    grid-row: 1 / 3;
}

.chart-secondary {
    grid-column: 2;
    grid-row: 1;
}

.chart-tertiary {
    grid-column: 2;
    grid-row: 2;
}

.chart-container {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(20px);
    border-radius: 24px;
    padding: 2rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.metrics-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
}

.metric-card {
    padding: 2rem;
    border-radius: 24px;
    backdrop-filter: blur(20px);
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: transform 0.3s ease;
}

.metric-card:hover {
    transform: translateY(-8px);
}

.metric-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
}

.metric-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 1rem;
}

.activity-section {
    margin-bottom: 3rem;
}

.activity-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
}

.activity-stream {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(20px);
    border-radius: 24px;
    padding: 2rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
    max-height: 400px;
    overflow-y: auto;
}

.activity-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    border-radius: 16px;
    margin-bottom: 1rem;
    transition: all 0.3s ease;
    opacity: 0;
    animation: slideInUp 0.5s ease forwards;
}

.activity-item:hover {
    background: rgba(255, 255, 255, 0.1);
    transform: translateX(8px);
}

.activity-avatar img {
    width: 40px;
    height: 40px;
    border-radius: 50%;
}

.activity-content {
    flex: 1;
}

.activity-message {
    font-weight: 500;
    margin-bottom: 0.25rem;
}

.activity-meta {
    font-size: 0.875rem;
    opacity: 0.7;
}

.activity-value {
    font-weight: 700;
    font-size: 1.125rem;
}

.dashboard-footer {
    padding: 2rem;
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(20px);
    border-radius: 24px;
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.footer-stats {
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.stat-item {
    text-align: center;
}

.stat-label {
    display: block;
    font-size: 0.875rem;
    opacity: 0.7;
    margin-bottom: 0.5rem;
}

.stat-value {
    font-size: 1.5rem;
    font-weight: 700;
}

.animated-icon {
    animation: bounce 2s infinite;
}

.pulse-icon {
    animation: pulse 1.5s infinite;
}

@keyframes slideInUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
        transform: translateY(0);
    }
    40% {
        transform: translateY(-10px);
    }
    60% {
        transform: translateY(-5px);
    }
}

@keyframes pulse {
    0%, 100% {
        transform: scale(1);
    }
    50% {
        transform: scale(1.1);
    }
}

/* Responsive Design */
@media (max-width: 1400px) {
    .dashboard-content {
        margin-left: 2rem;
        margin-right: 2rem;
    }
    
    .dashboard-navigation {
        transform: translateX(-100%);
        transition: transform 0.3s ease;
    }
    
    .dashboard-navigation.is-open {
        transform: translateX(0);
    }
}

@media (max-width: 768px) {
    .hero-section {
        flex-direction: column;
        gap: 2rem;
        text-align: center;
    }
    
    .charts-grid {
        grid-template-columns: 1fr;
    }
    
    .metrics-grid {
        grid-template-columns: 1fr;
    }
    
    .floating-clock {
        display: none;
    }
}
</style>
{% endblock %}