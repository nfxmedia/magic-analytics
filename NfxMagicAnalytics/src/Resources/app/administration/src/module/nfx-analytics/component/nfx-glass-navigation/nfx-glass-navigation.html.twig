{% block nfx_glass_navigation %}
    <div class="nfx-glass-navigation">
        <!-- Glass backdrop with blur effects -->
        <div class="nfx-glass-navigation__backdrop"></div>
        
        <!-- Floating particles for ambient effect -->
        <div class="nfx-glass-navigation__particles">
            <span v-for="particle in particles" :key="particle" class="particle"></span>
        </div>
        
        <!-- Magnetic cursor effect -->
        <div class="nfx-glass-navigation__magnetic">
            <div class="nfx-glass-navigation__magnetic-cursor"
                 :class="{ 'nfx-glass-navigation__magnetic-cursor--active': isMagneticActive }">
            </div>
        </div>
        
        <!-- Main content with parallax sections -->
        <div class="nfx-glass-navigation__content">
            <!-- Header with gradient text -->
            <div class="nfx-glass-navigation__header">
                <h2>Analytics</h2>
                <p>Explore your shop insights</p>
            </div>
            
            <!-- Dashboard section with depth -->
            <div class="nfx-glass-navigation__section nfx-glass-navigation__section--depth-1">
                <h3>Dashboard</h3>
                
                <div v-for="(item, index) in navigationItems.filter(i => i.category === 'dashboard')"
                     :key="item.id"
                     class="nfx-glass-navigation__card"
                     :class="{ 'nfx-glass-navigation__card--active': item.isActive }"
                     @click="onCardClick(item)">
                    
                    <div class="nfx-glass-navigation__icon">
                        <i :class="item.icon"></i>
                    </div>
                    
                    <div class="nfx-glass-navigation__title">
                        {{ item.title }}
                        <span class="nfx-glass-navigation__arrow">→</span>
                    </div>
                    
                    <div class="nfx-glass-navigation__description">
                        {{ item.description }}
                    </div>
                </div>
            </div>
            
            <!-- Sales Analytics section with different depth -->
            <div class="nfx-glass-navigation__section nfx-glass-navigation__section--depth-2">
