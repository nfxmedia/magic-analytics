<style>
/* Ripple effect for card clicks */
.ripple {
    position: absolute;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.6);
    transform: scale(0);
    animation: ripple-animation 0.6s ease-out;
    pointer-events: none;
}

@keyframes ripple-animation {
    to {
        transform: scale(4);
        opacity: 0;
    }
}

/* In-view animation for cards */
.nfx-glass-navigation__card {
    opacity: 0;
    transform: translateY(30px) translateZ(0);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
}

.nfx-glass-navigation__card.in-view {
    opacity: 1;
    transform: translateY(0) translateZ(0);
}

/* Stagger animation delay */
.nfx-glass-navigation__section .nfx-glass-navigation__card {
    transition-delay: calc(var(--index, 0) * 0.05s);
}

.nfx-glass-navigation__section .nfx-glass-navigation__card:nth-child(2) { --index: 0; }
.nfx-glass-navigation__section .nfx-glass-navigation__card:nth-child(3) { --index: 1; }
.nfx-glass-navigation__section .nfx-glass-navigation__card:nth-child(4) { --index: 2; }
.nfx-glass-navigation__section .nfx-glass-navigation__card:nth-child(5) { --index: 3; }
.nfx-glass-navigation__section .nfx-glass-navigation__card:nth-child(6) { --index: 4; }
</style>