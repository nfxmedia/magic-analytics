{% block cbax_analytics_customer_online %}
    <div>

        {% block cbax_analytics_customer_online_grid %}
            <sw-card positionIdentifier="'test'" class="cbax-analytics-content-card-grid cbax-analytics-customer-online-grid"
                     :isLoading="isLoading" v-if="!displayOptions.dashboard || activeStatistic.parameter.dashboard.showTable == 1">

                {% block cbax_analytics_customer_online_grid_data %}
                    <div v-if="displayOptions.dashboard" class="cbax-analytics-grid-label">
                        {{ $tc(activeStatistic.label) }}
                    </div>

                    <div v-if="!gridSeriesData || (gridSeriesData && gridSeriesData.length == 0)" class="cbax-analytics-empty-state-wrapper">
                        <sw-empty-state :title="$tc('cbax-analytics.index.noData')"></sw-empty-state>
                    </div>

                    <sw-data-grid v-else
                            :dataSource="gridSeriesData"
                            :columns="getGridColumns"
                            :showSelection="false"
                            :showActions="false">

                        {% block cbax_analytics_customer_online_grid_columns_time %}
                            <template #column-time="{ item }">
                                {{ $tc(item.time) }}
                            </template>
                        {% endblock %}

                    </sw-data-grid>
                {% endblock %}

            </sw-card>

            {% block cbax_analytics_visitors_help %}
                <sw-alert
                    v-if="!displayOptions.dashboard"
                    :appearance="'notification'"
                    :showIcon="false"
                    :closable="false"
                    :variant="'neutral'"
                    :title="$tc('cbax-analytics.general.help')"
                >
                    <div class="cbax-analytics-description">
                        {{ $tc('cbax-analytics.view.customerOnline.description') }}
                    </div>
                </sw-alert>
            {% endblock %}
        {% endblock %}

    </div>
{% endblock %}
